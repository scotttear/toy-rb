:root {
  --white: #fff;
  --charcoal: #2c3e50;
  --grey-light: #eee;
  --magento: #d74db3;
  --yellow: #ffeb3b;
}

body
  font-family Avenir, Helvetica, Arial, sans-serif
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  color var(--charcoal)
  margin 0
  padding 0

.app
  &__container
    margin 0 auto
    max-width 700px
    padding 20px

  &__header
    text-align center
    margin-bottom 30px

  &__notification-list
    background-color var(--grey-light)
    list-style none
    margin 0 auto 40px
    max-width 60%
    padding 0

  &__notification-item
    border-bottom 1px solid var(--white)
    display flex
    justify-content space-between
    padding 8px

  &__btn
    background var(--yellow)
    border 0
    border-radius: 0
    cursor pointer
    padding 6px 16px
    text-transform uppercase

  &__grid
    background-color var(--magento)
    border 1px solid var(--magento)
    display grid
    grid-gap 1px
    grid-template-columns repeat(5, 100px)
    grid-template-rows repeat(5, 100px)
    margin 0 auto
    position relative
    width 504px

  &__grid-tile
    background-color var(--white)

  &__robot
    display block
    height 100px
    position absolute
    width 100px

  &__footer
    display flex
    justify-content center
    padding 30px 0
